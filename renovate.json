{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":timezone(Asia/Tokyo)",
    ":prHourlyLimitNone",
    ":automergePatch"
  ],
  "schedule": [
    "before 7am"
  ],
  "automergeSchedule": [
    "before 7am"
  ],
  "labels": [
    "dependencies"
  ],
  "commitMessagePrefix": ":up:",
  "pruneBranchAfterAutomerge": true,
  "packageRules": [
    {
      "groupName": "all patch dependencies",
      "groupSlug": "all-patch",
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "patch",
        "pin"
      ]
    }
  ]
}
